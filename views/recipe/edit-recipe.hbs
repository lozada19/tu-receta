<div>
  <form action="/recipe/{{dateRecipe._id}}/edit" method="POST">

    <label for="recipename">Nombre:</label>
    <input type="text" name="recipename" required="true" value="{{dateRecipe.recipename}}">
  
    <br>
    <label for="ingredients"> Ingredientes:</label>
    <input type="text" name="ingredients" required="true" value="{{dateRecipe.ingredients}}">
    <br>
    <label for="preparation">Preparacion:</label>
    <input type="text" name="preparation" required="true" value="{{dateRecipe.preparation}}">
    <br>

    
    <button>Editar</button>
    <br>

    <form action=""> 
      <label for="image">Imagen:</label>
      <input type="file" name="image"  value="{{dateRecipe.image}}">
      <br>
      <button>Agregar / cambiar imagen </button>
    </form>

  </form>
 </div>

