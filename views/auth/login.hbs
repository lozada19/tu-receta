<div id="login" class="bg-image" >

<div id="py-4" class="container py-4" "row g-0 align-items-center" "col-lg-6 mb-5 mb-lg-0" "card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            " "card-body p-5 shadow-5 text-center">
     <h2 class="fw-bold mb-5">Iniciar sesión</h2>
  <form action="/auth/login" method="POST">
    <label class="form-label" for="email"><h5>Correo:</h5></label>
    <input class="form-control" type="text" name="email" required="true" />
    <br />
    <label class="form-label" for="password"><h5>Contraseña:</h5></label>
    <input class="form-control"  type="password" name="password" required="true" />
    <br />
    <h5>{{errorMessage}}</h5>
    <br />
    <button class="btn btn-primary btn-block mb-4"><h4> Acceder </h4></button>
  </form>

</div>
</div>